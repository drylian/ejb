{
  "name": "ejb-intellisense",
  "displayName": "EJB Intellisense",
  "description": "VSCode extension for EJB template language with syntax highlighting and IntelliSense",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:ejb"
  ],
  "main": "./dist/extension.js",
  "type": "module",
  "contributes": {
    "languages": [
      {
        "id": "ejb",
        "aliases": [
          "EJB",
          "ejb"
        ],
        "extensions": [
          ".ejb"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "ejbconfig.json",
        "url": "./schemas/ejbconfig.schema.json"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "ejb",
        "scopes": {
          "keyword": ["keyword.control.ejb"],
          "property": ["support.type.property-name.css"],
          "class": ["entity.name.tag.css"],
          "string": ["string.quoted.double.js"]
        }
      }
    ]
  },
  "scripts": {
    "build": "vsce package",
    "vscode:prepublish": "bun build --external vscode --outdir dist src/extension.ts",
    "watch": "bun build --external vscode --outdir dist src/extension.ts --watch"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x"
  },
  "dependencies": {
    "zustand": "^5.0.8"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
