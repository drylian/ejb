{
    "comments": {
        "lineComment": {
            "comment": "//"
        },
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["<", ">"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["<", ">"],
        ["{{", "}}"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["<", ">"],
        ["{{", "}}"]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*@(if|for|component|code|css)\\b",
            "end": "^\\s*@end\\b"
        }
    },
    "wordPattern": "(@?[a-zA-Z_$][\\w$]*)"
}