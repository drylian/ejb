{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "EJB",
    "patterns": [
        {
            "include": "text.html.basic"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#directives"
        },
        {
            "include": "#interpolations"
        }
    ],
    "repository": {
        "variables": {
            "patterns": [
                {
                    "match": "\\b(it(?:\\.[\\w$]+)+)\\b",
                    "name": "variable.language.ejb"
                }
            ]
        },
        "path_aliases": {
            "patterns": [
                {
                    "match": "@[\\w-]+",
                    "name": "variable.parameter.ejb"
                }
            ]
        },
        "string_with_aliases": {
            "patterns": [
                {
                    "name": "string.quoted.single.js",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "include": "#path_aliases"
                        },
                        {
                            "match": "\\\\.",
                            "name": "constant.character.escape.js"
                        }
                    ]
                },
                {
                    "name": "string.quoted.double.js",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "include": "#path_aliases"
                        },
                        {
                            "match": "\\\\.",
                            "name": "constant.character.escape.js"
                        }
                    ]
                }
            ]
        },
        "js_with_vars": {
            "patterns": [
                {
                    "include": "#string_with_aliases"
                },
                {
                    "include": "#variables"
                },
                {
                    "include": "source.js"
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "begin": "<!--",
                    "end": "-->",
                    "name": "comment.block.html"
                }
            ]
        },
        "interpolations": {
            "patterns": [
                {
                    "name": "meta.interpolation.ejb",
                    "contentName": "source.js.embedded.ejb",
                    "begin": "{{",
                    "end": "}}",
                    "beginCaptures": {
                        "0": {
                            "name": "keyword.control.interpolation.ejb"
                        }
                    },
                    "endCaptures": {
                        "0": {
                            "name": "keyword.control.interpolation.ejb"
                        }
                    },
                    "patterns": [
                        {
                            "include": "#js_with_vars"
                        }
                    ]
                }
            ]
        },
        "directive-js-block": {
            "begin": "(@(?:if|for|switch|code|once|define|component))\\b\\s*(\\(?)",
            "beginCaptures": {
                "1": {
                    "name": "keyword.control.directive.ejb"
                },
                "2": {
                    "name": "punctuation.parenthesis.begin.ejb"
                }
            },
            "end": "(?:\\)\\s*(@(?:end|else|elseif|case|default|slot)))|(@end)",
            "endCaptures": {
                "1": {
                    "name": "punctuation.parenthesis.end.ejb"
                },
                "2": {
                    "name": "keyword.control.directive.ejb"
                },
                "3": {
                    "name": "keyword.control.directive.ejb"
                }
            },
            "patterns": [
                {
                    "include": "#js_with_vars"
                }
            ]
        },
        "directive-css-block": {
            "begin": "(@push)\\b\\s*\\(\\s*(\\'|\")styles\\2\\s*\\)",
            "beginCaptures": {
                "1": {
                    "name": "keyword.control.directive.ejb"
                }
            },
            "end": "(@end)",
            "endCaptures": {
                "1": {
                    "name": "keyword.control.directive.ejb"
                }
            },
            "contentName": "source.css",
            "patterns": [
                {
                    "include": "source.css"
                }
            ]
        },
        "directives": {
            "patterns": [
                {
                    "include": "#directive-js-block"
                },
                {
                    "include": "#directive-css-block"
                },
                {
                    "match": "(@(?:else|elseif|case|default|break|continue|stack|defined|import|layout|slot|end))\\b(?:\\s*\\((.*?)\\))?",
                    "captures": {
                        "1": {
                            "name": "keyword.control.directive.ejb"
                        },
                        "2": {
                            "name": "meta.embedded.expression.ejb",
                            "patterns": [
                                {
                                    "include": "#js_with_vars"
                                }
                            ]
                        }
                    }
                }
            ]
        }
    },
    "scopeName": "source.ejb"
}