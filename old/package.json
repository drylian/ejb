{
	"name": "ejb-intellisense",
	"displayName": "EJB Intellisense",
	"description": "VSCode extension for EJB template language with syntax highlighting and IntelliSense",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Other"
	],
	"activationEvents": [
		"onLanguage:ejb"
	],
	"icon": "images/ejb-icon.png",
	"main": "./dist/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "ejb",
				"aliases": [
					"EJB",
					"ejb"
				],
				"extensions": [
					".ejb"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "ejb",
				"scopeName": "text.html.ejb",
				"path": "./syntaxes/ejb.tmLanguage.json"
			}
		],
		"jsonValidation": [
			{
				"fileMatch": "ejbconfig.json",
				"url": "./schemas/ejbconfig.schema.json"
			}
		],
		"commands": [
			{
				"command": "ejb.showLoadedDirectives",
				"title": "EJB: Show Loaded Directives"
			}
		],
		"iconThemes": [
			{
				"id": "ejb-theme",
				"label": "EJB Theme",
				"path": "./ejb-icon-theme.json"
			}
		]
	},
	"scripts": {
		"build": "vsce package",
		"vscode:prepublish": "bun build --external vscode --outdir dist src/extension.ts",
		"watch": "bun build --external vscode --outdir dist src/extension.ts --watch"
	},
	"devDependencies": {
		"@types/vscode": "^1.74.0",
		"@types/node": "16.x",
		"typescript": "^4.9.4"
	}
}